<Page x:ConnectionId='1'
    x:Class="picturelibrary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:picturelibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:picturelibrary.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button x:ConnectionId='12' Name="Hamburgerbutton" 
                                                 
                    
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE700;"
                    Background="Coral"
                    Height="50" Width="50"/>
            <Button x:ConnectionId='13' Name="Backbutton"
                                            
                    Content="&#xE0A6;"
                    RelativePanel.RightOf="Hamburgerbutton"
                    FontFamily="Segoe MDL2 Assets"
                    Background="CornflowerBlue"
                    Height="50" Width="50"/>
        </RelativePanel>
        
        <SplitView x:ConnectionId='2'
            Grid.Row="1" Name="ContentSplitView"
                   DisplayMode="CompactOverlay"
                   CompactPaneLength="60"
                   OpenPaneLength="200">
            <SplitView.Pane>
                <ListView x:ConnectionId='3'  Name="iconitems"
                                                          
                           IsItemClickEnabled="True" 
                                                           
                           >
                    <ListView.ItemTemplate>
                        <DataTemplate                       >
                            <StackPanel x:ConnectionId='5' Orientation="Horizontal">
                                <Image x:ConnectionId='6'  Name="Icons"
                                                           Width="50" Height="50"
                                        Margin="-8,15,0,10"/>
                                <TextBlock x:ConnectionId='7' Name="contenttext"                         
                                           Margin="12,20,0,10" FontSize="20"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:ConnectionId='8' Grid.Row="0" Text="Nature"  FontSize="22" Name="Title"
                               Margin="10,0,0,10"/>

                    <GridView x:ConnectionId='9' Grid.Row="1" Name="imagegridview"
                                                                 
                              IsItemClickEnabled="True"
                                                             >

                        <GridView.ItemTemplate>
                            <DataTemplate                           >
                                <Image x:ConnectionId='11' Name="pictureimage"  
                                       Height="100" Width="100" 
                                                                  
                                       Stretch="UniformToFill"
                                      
                                       Margin="0,10,0,10"/>
                                
                            </DataTemplate>
                        </GridView.ItemTemplate>

                    </GridView>

                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

